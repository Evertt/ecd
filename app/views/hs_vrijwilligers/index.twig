{% include 'hs_subnavigation.twig' %}

<h1>Vrijwilligers</h1>

{{ html.link('Vrijwilliger toevoegen', {'action': 'add'})|raw }}

<table>
    <tr>
        <th>Nummer</th>
        <th>Naam</th>
        <th>Dragende vrijwilliger</th>
        <th></th>
    </tr>
    {% for hsVrijwilliger in pagination %}
    <tr>
        <td>{{ hsVrijwilliger.vrijwilliger.id }}</td>
        <td>{{ hsVrijwilliger.vrijwilliger.naam }}</td>
        <td>{{ hsVrijwilliger.dragend ? 'ja' : 'nee' }}</td>
        <td>
            {{ html.link('Bekijken', {'action': 'view', 0: hsVrijwilliger.id})|raw }}
            {{ html.link('Bewerken', {'action': 'edit', 0: hsVrijwilliger.id})|raw }}
            {{ html.link('Verwijderen', {'action': 'delete', 0: hsVrijwilliger.id})|raw }}
        </td>
    </tr>
    {% endfor %}
</table>

<p>
    {{ knp_pagination_render(pagination) }}
</p>
