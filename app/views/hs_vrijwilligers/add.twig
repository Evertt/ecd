{% include 'hs_subnavigation.twig' %}

<h1>Vrijwilliger toevoegen</h1>

{% if filterForm is defined %}
    Zoek een bestaande vrijwilliger op vrijwilligernummer, naam en/of geboortedatum.
    {{ form_start(filterForm) }}
        {{ form_widget(filterForm) }}
        <input type="submit" value="Verder" />
    {{ form_end(filterForm) }}
{% endif %}

{% if selectionForm is defined %}
    Selecteer een bestaande vrijwilliger en klik op "Verder".<br>
    Selecteer niks en klik op "Verder" om een nieuwe vrijwilliger aan te maken.
    {{ form_start(selectionForm) }}
        {{ form_widget(selectionForm) }}
        <input type="submit" value="Verder" />
    {{ form_end(selectionForm) }}
{% endif %}

{% if creationForm is defined %}
    {{ form_start(creationForm) }}
        {{ form_widget(creationForm) }}
        <input type="submit" value="Opslaan" />
    {{ form_end(creationForm) }}
{% endif %}
