{% include 'hs_subnavigation.twig' %}

<h1>
    Klanten
</h1>

<p>
    {{ html.addLink({'action': 'add'})|raw }}
    {{ html.link('Klant toevoegen', {'action': 'add'})|raw }}
</p>

<table>
    <tr>
        {{ form_start(filter) }}
        <th>
            {{ form_widget(filter.id) }}
            {{ form_errors(filter.id) }}
        </th>
        <th>
            {{ form_widget(filter.klant.naam) }}
            {{ form_errors(filter.klant.naam) }}
        </th>
        <th>
        </th>
        <th>
            {{ form_widget(filter.klant.stadsdeel) }}
            {{ form_errors(filter.klant.stadsdeel) }}
        </th>
        <th>
            {{ form_widget(filter.openstaand) }}
            {{ form_label(filter.openstaand) }}
            {{ form_errors(filter.openstaand) }}
        </th>
        <th>
            <button type="submit">Filteren</button>
        </th>
        {{ form_end(filter) }}
    </tr>
    <tr>
        <th>
            {{ knp_pagination_sortable(pagination, '#', 'hsKlant.id') }}
        </th>
        <th>
            {{ knp_pagination_sortable(pagination, 'Klant', 'klant.achternaam') }}
        </th>
        <th>
            {{ knp_pagination_sortable(pagination, 'Actief', 'hsKlant.actief') }}
        </th>
        <th>
            {{ knp_pagination_sortable(pagination, 'Stadsdeel', 'klant.werkgebied') }}
        </th>
        <th>Openstaand</th>
        <th>
        </th>
    </tr>
    {% for hsKlant in pagination %}
    <tr>
        <td>
            {{ html.link(hsKlant.id, {'action': 'view', 0: hsKlant.id})|raw }}
        </td>
        <td>
            {{ html.link(hsKlant.klant.naam, {'action': 'view', 0: hsKlant.id})|raw }}
        </td>
        <td>
            {{ hsKlant.klant.werkgebied }}
        </td>
        <td>
            {{ hsKlant.actief }}
        </td>
        <td>
            {{ hsKlant.openstaand|money }}
        </td>
        <td>
            {{ html.viewLink({'action': 'view', 0: hsKlant.id})|raw }}
            {{ html.editLink({'action': 'edit', 0: hsKlant.id})|raw }}
            {% if hsKlant.deletable %}
                {{ html.deleteLink({'action': 'delete', 0: hsKlant.id})|raw }}
            {% endif %}
        </td>
    </tr>
    {% endfor %}
</table>

<p>
    {{ knp_pagination_render(pagination) }}
</p>
