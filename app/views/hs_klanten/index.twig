{% include 'hs_subnavigation.twig' %}

<h1>Klanten</h1>

{{ html.link('Klant toevoegen', {'action': 'add'})|raw }}

<table>
    <tr>
        <th>Nummer</th>
        <th>Naam</th>
        <th></th>
    </tr>
    {% for hsKlant in pagination %}
    <tr>
        <td>{{ hsKlant.id }}</td>
        <td>{{ hsKlant.klant.naam }}</td>
        <td>
            {{ html.link('Klus toevoegen', {'controller': 'hs_klussen', 'action': 'add', 0: hsKlant.id})|raw }}
            {{ html.link('Bekijken', {'action': 'view', 0: hsKlant.id})|raw }}
            {{ html.link('Bewerken', {'action': 'edit', 0: hsKlant.id})|raw }}
            {{ html.link('Verwijderen', {'action': 'deleten', 0: hsKlant.id})|raw }}
        </td>
    </tr>
    {% endfor %}
</table>

<p>
    {{ knp_pagination_render(pagination) }}
</p>
