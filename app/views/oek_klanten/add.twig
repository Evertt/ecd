{% include 'oek_subnavigation.twig' %}

<h1>Klant toevoegen</h1>

{% if filterForm is defined %}
    Zoek een bestaande klant op klantnr, naam en/of geboortedatum.
    {{ form_start(filterForm) }}
        {{ form_widget(filterForm) }}
        <button type="submit">Verder</button>
    {{ form_end(filterForm) }}
{% endif %}

{% if selectionForm is defined %}
    Selecteer een bestaande klant en klik op "Verder".<br>
    Selecteer niks en klik op "Verder" om een nieuwe klant aan te maken.
    {{ form_start(selectionForm) }}
        {{ form_widget(selectionForm) }}
        <button type="submit">Verder</button>
    {{ form_end(selectionForm) }}
{% endif %}

{% if creationForm is defined %}
    {{ form_start(creationForm) }}
        {{ form_widget(creationForm) }}
        <button type="submit">Opslaan</button>
    {{ form_end(creationForm) }}
{% endif %}
