{% include 'oek_subnavigation.twig' %}

<h1>
    Deelnemer {{ oekKlant.klant.naam }}
    {{ html.editLink({'action': 'edit', 0: oekKlant.id})|raw }}
    {% if oekKlant.deletable %}
        {{ html.deleteLink({'action': 'delete', 0: oekKlant.id})|raw }}
    {% endif %}
</h1>

<p>
    {% if oekKlant.oekAfsluiting %}
        {{ html.link('Dossier heropenen', {'action': 'open', 0: oekKlant.id})|raw }}
    {% else %}
        {{ html.link('Dossier afsluiten', {'action': 'close', 0: oekKlant.id})|raw }}
    {% endif %}
</p>

<dl>
    <dt>#</dt>
    <dd>{{ oekKlant.klant.id }}</dd>
    <dt>Naam</dt>
    <dd>{{ oekKlant.klant.naam }}</dd>
    <dt>Historie</dt>
    <dd>
        <ul>
            {% for oekDossierStatus in oekKlant.oekDossierStatussen %}
                <li>{{ oekDossierStatus }}</li>
            {% endfor %}
        </ul>&nbsp;
    </dd>
    <dt>Opmerking</dt>
    <dd>{{ oekKlant.opmerking|nl2br }}&nbsp;</dd>
    <dt>
        Groepen
        {{ html.addLink({'controller': 'oek_klanten', 'action': 'add_groep', 0: oekKlant.id})|raw }}
    </dt>
    <dd>
        <ul>
            {% for oekGroep in oekKlant.oekGroepen %}
                <li>
                    {{ html.link(oekGroep, {'controller': 'oek_groepen', 'action': 'view', 0: oekGroep.id})|raw }}
                </li>
            {% endfor %}
        </ul>
        &nbsp;
    </dd>
    <dt>
        Trainingen
        {{ html.addLink({'controller': 'oek_klanten', 'action': 'add_training', 0: oekKlant.id})|raw }}
    </dt>
    <dd>
        <ul>
            {% for oekTraining in oekKlant.oekTrainingen %}
                <li>
                    {{ html.link(oekTraining, {'controller': 'oek_trainingen', 'action': 'view', 0: oekTraining.id})|raw }}
                </li>
            {% endfor %}
        </ul>
        &nbsp;
    </dd>
</dl>
