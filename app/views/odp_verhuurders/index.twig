{% include 'odp_subnavigation.twig' %}

<h1>Verhuurders</h1>

<p>
    {{ html.addLink({'action': 'add'})|raw }}
    {{ html.link('Verhuurder toevoegen', {'action': 'add'})|raw }}
</p>

<table>
    <tr>
        {{ form_start(filter) }}
        <th>
            {{ form_widget(filter.id) }}
            {{ form_errors(filter.id) }}
        </th>
        <th>
            {{ form_widget(filter.klant.naam) }}
            {{ form_errors(filter.klant.naam) }}
        </th>
        <th>
            {{ form_widget(filter.klant.stadsdeel) }}
            {{ form_errors(filter.klant.stadsdeel) }}
        </th>
        <th>
            <button type="submit">Filteren</button>
        </th>
        {{ form_end(filter) }}
    </tr>
    <tr>
        <th>
            {{ knp_pagination_sortable(pagination, '#', 'odpVerhuurder.id') }}
        </th>
        <th>
            {{ knp_pagination_sortable(pagination, 'Klant', 'klant.achternaam') }}
        </th>
        <th>
            {{ knp_pagination_sortable(pagination, 'Stadsdeel', 'klant.werkgebied') }}
        </th>
        <th></th>
        <th>
        </th>
    </tr>
    {% for odpVerhuurder in pagination %}
    <tr>
        <td>
            {{ html.link(odpVerhuurder.id, {'action': 'view', 0: odpVerhuurder.id})|raw }}
        </td>
        <td>
            {{ html.link(odpVerhuurder.klant.naam, {'action': 'view', 0: odpVerhuurder.id})|raw }}
        </td>
        <td>
            {{ odpVerhuurder.klant.werkgebied }}
        </td>
        <td>
            {{ html.viewLink({'action': 'view', 0: odpVerhuurder.id})|raw }}
            {{ html.editLink({'action': 'edit', 0: odpVerhuurder.id})|raw }}
            {% if odpVerhuurder.deletable %}
                {{ html.deleteLink({'action': 'delete', 0: odpVerhuurder.id})|raw }}
            {% endif %}
        </td>
    </tr>
    {% endfor %}
</table>

<p>
    {{ knp_pagination_render(pagination) }}
</p>
