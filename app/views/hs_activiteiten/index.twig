{% include 'hs_subnavigation.twig' %}

<h1>Activiteiten</h1>

{{ html.link('Activiteit toevoegen', {'action': 'add'})|raw }}

<table>
    <tr>
        <th>
            {{ knp_pagination_sortable(pagination, 'Activiteitnr', 'hsActiviteit.id') }}
        </th>
        <th>
            {{ knp_pagination_sortable(pagination, 'Naam', 'hsActiviteit.naam') }}
        </th>
        <th></th>
    </tr>
    {% for hsActiviteit in pagination %}
    <tr>
        <td>
            {{ hsActiviteit.id }}
        </td>
        <td>
            {{ hsActiviteit.naam }}
        </td>
        <td>
            {{ html.viewLink({'action': 'view', 0: hsActiviteit.id})|raw }}
            {{ html.editLink({'action': 'edit', 0: hsActiviteit.id})|raw }}
            {% if hsActiviteit.deletable %}
                {{ html.deleteLink({'action': 'delete', 0: hsActiviteit.id})|raw }}
            {% endif %}
        </td>
    </tr>
    {% endfor %}
</table>

<p>
    {{ knp_pagination_render(pagination) }}
</p>
