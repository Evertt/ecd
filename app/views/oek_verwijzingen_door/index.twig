{% include 'oek_subnavigation.twig' %}

<h1>Verwijzingen door</h1>

<p>
    {{ html.addLink({'action': 'add'})|raw }}
    {{ html.link('Verwijzing toevoegen', {'action': 'add'})|raw }}
</p>

<table>
    <tr>
        <th>
            {{ knp_pagination_sortable(pagination, '#', 'oekVerwijzing.id') }}
        </th>
        <th>
            {{ knp_pagination_sortable(pagination, 'Naam', 'oekVerwijzing.naam') }}
        </th>
        <th></th>
    </tr>
    {% for oekVerwijzing in pagination %}
    <tr>
        <td>
            {{ html.link(oekVerwijzing.id, {'action': 'view', 0: oekVerwijzing.id})|raw }}
        </td>
        <td>
            {{ html.link(oekVerwijzing.naam, {'action': 'view', 0: oekVerwijzing.id})|raw }}
        </td>
        <td>
            {{ html.editLink({'action': 'edit', 0: oekVerwijzing.id})|raw }}
            {% if oekVerwijzing.deletable %}
                {{ html.deleteLink({'action': 'delete', 0: oekVerwijzing.id})|raw }}
            {% endif %}
        </td>
    </tr>
    {% endfor %}
</table>

<p>
    {{ knp_pagination_render(pagination) }}
</p>
