{% extends '::base.html.twig' %}
{% import '::html.macro.twig' as html %}

{% block title %}
    ODP | Vrijwilligers |
{% endblock %}

{% block subnavigation %}
    {% include '@Hs/hs_subnavigation.html.twig' %}
{% endblock %}

{% block content %}
    <h1>Vrijwilligers</h1>
    <p>
        {{ html.addLink(path('hs_vrijwilligers_add')) }}
        {{ html.link('Vrijwilliger toevoegen', path('hs_vrijwilligers_add')) }}
    </p>
    <table class="table table-hover">
        <thead>
            <tr>
                {{ form_start(filter) }}
                <th>
                    {{ form_widget(filter.vrijwilliger.id) }}
                    {{ form_errors(filter.vrijwilliger.id) }}
                </th>
                <th>
                    {{ form_widget(filter.vrijwilliger.naam) }}
                    {{ form_errors(filter.vrijwilliger.naam) }}
                </th>
                <th>
                    {{ form_widget(filter.vrijwilliger.stadsdeel) }}
                    {{ form_errors(filter.vrijwilliger.stadsdeel) }}
                </th>
                <th>
                    {{ form_label(filter.dragend) }}
                    {{ form_widget(filter.dragend) }}
                    {{ form_errors(filter.dragend) }}
                </th>
                <th>
                    {{ form_label(filter.rijbewijs) }}
                    {{ form_widget(filter.rijbewijs) }}
                    {{ form_errors(filter.rijbewijs) }}
                </th>
                <th>
                    {{ form_widget(filter.filter) }}
                    {{ form_widget(filter.download) }}
                </th>
                {{ form_end(filter) }}
            </tr>
            <tr>
                <th>
                    {{ knp_pagination_sortable(pagination, '#', 'vrijwilliger.id') }}
                </th>
                <th>
                    {{ knp_pagination_sortable(pagination, 'Vrijwilliger', 'basisvrijwilliger.achternaam') }}
                </th>
                <th>
                    {{ knp_pagination_sortable(pagination, 'Stadsdeel', 'basisvrijwilliger.werkgebied') }}
                </th>
                <th>Dragend</th>
                <th>Rijbewijs</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for vrijwilliger in pagination %}
            <tr>
                <td>
                    {{ html.link(vrijwilliger.vrijwilliger.id, path('hs_vrijwilligers_view', {'id': vrijwilliger.id})) }}
                </td>
                <td>
                    {{ html.link(vrijwilliger.vrijwilliger.naam, path('hs_vrijwilligers_view', {'id': vrijwilliger.id})) }}
                </td>
                <td>
                    {{ vrijwilliger.vrijwilliger.werkgebied }}
                </td>
                <td>
                    {{ vrijwilliger.dragend ? 'Ja' : 'Nee' }}
                </td>
                <td>
                    {{ vrijwilliger.rijbewijs ? 'Ja' : (vrijwilliger.rijbewijs is null ? 'Onbekend' : 'Nee') }}
                </td>
                <td>
                    {{ html.viewLink(path('hs_vrijwilligers_view', {id: vrijwilliger.id})) }}
                    {{ html.editLink(path('hs_vrijwilligers_edit', {id: vrijwilliger.id})) }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {{ knp_pagination_render(pagination) }}
{% endblock %}
