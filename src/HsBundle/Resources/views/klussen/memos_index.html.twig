{% include 'hs_subnavigation.twig' %}

<h1>
    Memo's van {{ klus }}
</h1>

<p>
    {{ html.viewLink({'action': 'view', 0: klus.id}) }}
    {{ html.link('Klus bekijken', {'action': 'view', 0: klus.id}) }}
    {{ html.addLink({'action': 'memos_add', 0: klus.id}) }}
    {{ html.link('Memo toevoegen', {'action': 'memos_add', 0: klus.id}) }}
</p>

<table>
    <tr>
        <th>Datum</th>
        <th>Medewerker</th>
        <th>Memo</th>
        <th>
        </th>
    </tr>
    {% for memo in pagination %}
        <tr>
            <td>
                {{ memo.datum ? memo.datum|date('d-m-Y H:i') : '' }}
            </td>
            <td>
                {{ memo.medewerker }}
            </td>
            <td>
                {{ memo.memo|nl2br }}
            </td>
            <td>
                {# html.editLink({'action': 'memos_edit', 0: klus.id}) #}
                {# html.deleteLink({'action': 'memos_delete', 0: klus.id}) #}
            </td>
        </tr>
    {% endfor %}
</table>

<p>
    {{ knp_pagination_render(pagination) }}
</p>
