<h2>Documenten</h2>
{% if add_url is defined %}
    <p>
        {{ html.addLink(add_url) }}
        {{ html.link('Document toevoegen', add_url) }}
    </p>
{% endif %}
<table class="table table-hover">
    {% for document in entity.documenten %}
        <tr>
            <td>{{ document.naam }}</td>
            <td>{{ document.created|date('d-m-Y') }}</td>
            <td>{{ document.medewerker }}</td>
            <td>
                <a href="{{ vich_uploader_asset(document, 'file') }}" alt="{{ document.naam }}">
                    Document downloaden
                </a>
            </td>
        </tr>
    {% endfor %}
</table>
