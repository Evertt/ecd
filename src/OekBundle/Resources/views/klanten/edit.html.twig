{% extends '::base.html.twig' %}
{% import '::html.macro.twig' as html %}

{% block title %}
    OEK | Klanten |
{% endblock %}

{% block subnavigation %}
    {% include '@Oek/_partials/subnavigation.html.twig' %}
{% endblock %}

{% block content %}
    <h1>Deelnemer wijzigen</h1>
    <p>
        Hier kunt u alleen de Op Eigen Kracht-gegevens voor deze deelnemer wijzigen.
        Klik {{ html.link('hier', path('oek_klanten_view', {id: oekKlant.klant.id })) }}
        om naar het basisdossier van deze deelnemer te gaan.
    </p>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button type="submit">Opslaan</button>
    {{ form_end(form) }}
{% endblock %}
